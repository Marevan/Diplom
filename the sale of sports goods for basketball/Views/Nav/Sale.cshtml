@model Product
@{

}
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../bootstrap/css/bootstrap.min.css">
    <script src="../bootstrap/js/bootstrap.bundle.min.js"></script>
    <title>Sale</title>
</head>
<body>
    <div class="container my-5">
        <div class="row">
            <div class="col-md-6 mx-auto d-flex flex-column justify-content-center border border-primary p-5">
                <h4 class="mt-0 text-center">Продаж товару</h4>
                <form method="post" asp-controller="Nav" asp-action="Sale">
                    <input asp-for="Id" hidden />
                    <div class="form-group mt-4">
                        <label asp-for="Name" style="color: black;">Назва</label>
                        <input asp-for="Name" disabled class="form-control">
                    </div>
                    <div class="form-group mt-4">
                        <label asp-for="Category" style="color: black;">Категорія</label>
                        <input asp-for="Category" disabled class="form-control">
                    </div>
                    <div class="form-group mt-4">
                        <label asp-for="Description" style="color: black;">Опис</label>
                        <input asp-for="Description" disabled class="form-control">
                    </div>
                    <div class="form-group mt-4">
                        <label asp-for="Amount" name="amount" style="color: black;">Кількість</label>
                        <input asp-for="Amount" class="form-control" placeholder="Введіть кількість товара">
                    </div>
                    <div class="form-group mt-4">
                        <label asp-for="Price" style="color: black;">Ціна</label>
                        <input asp-for="Price" disabled class="form-control">
                    </div>
                    <div class="form-group text-center mt-4">
                        <button type="submit" class="btn btn-primary mx-auto">Прийняти</button>
                        <a href="@Url.Action("Warehouse", "Nav")" class="btn btn-primary mx-auto">Скасувати</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
</html>